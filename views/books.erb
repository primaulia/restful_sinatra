<h2>Getting books from the DeeBae</h2>

<ul>
  <% @books.each do |book| %>
  <li>
    <%= book[:title] %>
  </li>
  <% end %>
</ul>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= book[:id] %>        
      </td>
      <td>
        <%= book[:title] %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
